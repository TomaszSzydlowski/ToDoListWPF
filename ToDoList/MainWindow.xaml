<Window x:Class="ToDoListApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="To Do:" Height="450" SizeToContent="Width" ResizeMode="CanMinimize" WindowStyle="ToolWindow" Icon="icon.ico" MinWidth="250" Closing="MainWindow_OnClosing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <ListView Name="ListViewToDo" VerticalAlignment="Stretch"  Grid.Row="2" Grid.ColumnSpan="2" ItemsSource="{Binding Path=Items}"></ListView>
        <TextBox Name="TextItemDesc" Grid.Column="0" Grid.Row="0" Text="New task" MinWidth="100" GotFocus="TextItemDesc_OnGotFocus" PreviewMouseDown="TextItemDesc_PreviewMouseDown" KeyDown="TextItemDesc_OnKeyDown"/>
        <Button Content="Add" Grid.Row="0" HorizontalAlignment="right" Grid.Column="1" Name="BtnAdd" Click="btnAdd_Click" MinWidth="30" Height="20" VerticalAlignment="Top" />
        <CheckBox x:Name="CheckShowDone" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Content="Show done items"/>
    </Grid>
</Window>
    